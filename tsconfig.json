{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "types": ["node"],
    "typeRoots": ["./types", "./node_modules/@types"],
    "strict": true,
    "moduleResolution": "bundler",
    "target": "ES2020",
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "types/**/*.d.ts",
    "nuxt.config.ts",
    ".nuxt",
    "server",
    "composables",
    "pages",
    "components",
    "app.vue"
  ],
  "exclude": ["node_modules", ".output"]
}